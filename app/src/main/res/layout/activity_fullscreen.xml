                        android:textSize="40sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="fill_horizontal"
                        android:gravity="center"
                        android:layout_row="4"
                        android:layout_column="2"/>

                    <TextView
                        android:id="@+id/player_0_19"
                        android:text="_"
                        android:textSize="40sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="fill_horizontal"
                        android:gravity="center"
